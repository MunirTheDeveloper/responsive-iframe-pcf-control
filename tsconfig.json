{
  compilerOptions {
    target ES6,
    module CommonJS,
    declaration true,
    sourceMap true,
    outDir .dist,
    strict true,
    moduleResolution node,
    esModuleInterop true,
    skipLibCheck true,
    forceConsistentCasingInFileNames true,
    jsx react,
    baseUrl .
  },
  include [
    .ts,
    .tsx
  ],
  exclude [
    node_modules,
    .spec.ts,
    .test.ts
  ]
}
